<?xml version="1.0" encoding="UTF-8"?>
<turingMachine name="Addition (Unary numeral system)" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="turingMachine.xsd">
	<states>
		<initial-state name='Q0' />
		<!-- <state name='dummy' /> -->
		<final-state name='Q1' />
	</states>

	<tapes>
		<input-tape name='T0' />
		<!-- <tape name='dummy' /> -->
		<output-tape name='T1' />
	</tapes>

	<alphabet>
		<blank-symbol value='B' />
		<symbol value='0' />
		<symbol value='+' />
	</alphabet>

	<transitions>
		<!-- Read '0': Add one '0' -->
		<transition current-state='Q0' next-state='Q0'>
			<tape-transition tape='T0' read='0' write='B' motion='R' />
			<tape-transition tape='T1' read='B' write='0' motion='R' />
		</transition>

		<!-- Read '+': Do nothing -->
		<transition current-state='Q0' next-state='Q0'>
			<tape-transition tape='T0' read='+' write='B' motion='R' />
			<tape-transition tape='T1' read='B' write='B' motion='S' />
		</transition>

		<!-- Read 'B': Go to final state -->
		<transition current-state='Q0' next-state='Q1'>
			<tape-transition tape='T0' read='B' write='B' motion='S' />
			<tape-transition tape='T1' read='B' write='B' motion='S' />
		</transition>
	</transitions>

</turingMachine>